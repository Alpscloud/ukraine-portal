.btn
	display inline-block
	padding 25px 15px
	width 215px
	border-radius 7px
	font 14px $SemiBold
	line-height 1
	text-align center
	color $text-color
	transition all .17s ease-in-out
	backface-visibility hidden
	background-color $light-color
	box-shadow 0px 3px 16px 0px rgba(0,0,0,0.07)
	&:hover
		background-color $accent-color

	&-accent
		background-color $accent-color
		box-shadow  0px 10px 18px -7px rgba(227,191,97,1)
		&:hover
			box-shadow none
			background-color $dark-accent-color
	
	&.is-active
		background-color $accent-color
		box-shadow none

	&-sm
		width auto
		border-radius 40px
		padding 11px 30px
		font-size 12px
		
	&-wide
		padding-left 11px
		padding-right 11px
		width 100%
		
	&__close
		display inline-block
		width 20px
		height 20px
		background url('../img/icons/svg/close-ic.svg') center center no-repeat
		background-size 20px 20px
		
	&-no-shadow
		box-shadow none
		
	&-with-decor
		position relative
		&:after
			pseudo()
			position absolute
			left 100%
			vertical-center()
			margin-left 55px
			width 62.141px
			height 14.3px
			background url('../img/decor/leafs.svg') 50% 50% no-repeat
			
	&__arrow
		display inline-block
		position relative
		border-radius 7px	
		background-color $light-color
		width 62px
		height 62px
		&--ic
			svg()
			width 19px
			height 17px
			position absolute
			position-center()
		svg
			svg()
			fill $text-color
			
		&:hover
			background-color $accent-color
	&__top
		display none
		border-radius 50%
		width 40px
		height 40px
		position fixed
		right 30px
		bottom 30px
		background-color $accent-color
		z-index 10
		text-align center
		transition all .17s ease-in-out
		box-shadow 0px 0px 13px 0px rgba($dark-color, 0.21)
		&:after
			content ''
			display inline-block
			position absolute
			top 15px
			left 10px
			width 20px
			height 20px
			transform rotate(-45deg)
			border-top 1px solid $dark-color
			border-right 1px solid $dark-color
			transition all .23s ease-in-out
		&:hover
			background-color $dark-color
			transform scale(1.1)
			box-shadow 0px 0px 13px 0px rgba($accent-color, 0.21)
			&:after
				border-top 1px solid $accent-color
				border-right 1px solid $accent-color
		

	&__hamburger
		display flex
		flex-direction column
		justify-content space-between
		flex none
		width 36px
		height 22px
		position relative
		&--line
			width 36px
			height 2px
			background-color $dark-color
			display block
			transition all 0.3s ease-in-out	
			border-radius 20px
			&:first-child
				width 25px
		&:hover
			span
				background-color $accent-color
				&:first-child
					width 36px
		&.is-active
			.btn__hamburger--line
				background-color $accent-color
				&:nth-child(1)
					opacity 0	
				&:nth-child(2)
					
					transform translateY(0) rotate(45deg)
				&:nth-child(3)
					transform translateY(-10px) rotate(-45deg)
		