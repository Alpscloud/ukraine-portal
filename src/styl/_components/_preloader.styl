// Loader
.preloader
	display block
	position absolute
	position-center()
	z-index 1001
	perspective 500px

		
	&__wrapper
		position fixed
		top 0
		left 0
		width 100%
		height 100%
		z-index 1000
	&__section
		position fixed
		top 0
		width 51%
		height 100%
		background-color $preloader-bg 
		z-index 1000
		transform translateX(0)
		&--left
			left 0
		&--right
			right 0
			
	&__dots
		width 70px
		height 30px
		text-align center
		margin 45px auto 0 auto
		
	&__dot
		background-color $preloader-dots-bg
		height 10px
		width 10px
		border-radius 50%
		display inline-block

		animation stretchdelay 0.7s infinite ease-in-out
		
		&:nth-child(2)
			animation-delay -0.6s
			
		&:nth-child(3)
			animation-delay -0.56s
			
		&:nth-child(4)
			animation-delay -0.4s
			
		&:nth-child(5)
			animation-delay -0.3s


@keyframes stretchdelay
	0%, 40%, 100%
		transform translateY(-10px)  
	20% 
		transform translateY(-20px)



.is-loaded

	.preloader
		opacity 0
		transition all 0.3s ease-out
		&__wrapper
			visibility hidden
			transition all 0.3s 1s ease-out
		&__section
			&--left
				transform translateY(-100%)
				transition all 0.7s 0.3s cubic-bezier(0.645, 0.045, 0.355, 1.000)
			&--right
				transform translateY(100%)
				transition all 0.7s 0.3s cubic-bezier(0.645, 0.045, 0.355, 1.000)
