.team
	&-header
		margin-bottom 80px
		&__content
			width 380px
			flex none
			padding-right 30px
			
		&__img
			flex 1
			text-align right
			

	&__member
		&--item
			padding 30px 0
			border-top 2px solid $article-border-color
			
			display flex
			justify-content flex-start
			align-items center
			
			&-description
				display flex
				justify-content space-between
				align-items flex-start
				margin-left -30px
				margin-right -30px
				
			&:last-child
				padding-bottom 0
				
			&-col
				padding 0 30px
				width 33.3333%
				
			&-photo
				flex none
				width 300px
				margin-right 60px
				flex-col-center()
				img
					@extends .content-img
					
			&-info
				// max-width 340px
				p
					font-size 12px
					
			// &-name
			// 	width 250px
			// 	flex none
			// &-contacts
			// 	width 250px
			// 	flex none
					
			&-label
				display inline-block
				text-align center
				width 150px
				background-color $accent-color
				border-radius 40px
				padding 11px 30px
				font 12px	$SemiBold
				margin-bottom 50px