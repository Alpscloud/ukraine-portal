.header
	background-color $header-bg
	
	position relative
	z-index 5
	&:before,
	&:after
		pseudo()
		position absolute
		top 1px
		width 41px
		height 122.676px
		z-index 2
		
	&:before
		left 0
		background url('../img/decor/left.svg') 50% 50% no-repeat / 41px 122.676px
		
		
	&:after
		right 0
		background url('../img/decor/right.svg') 50% 50% no-repeat / 41px 122.676px
		
	&__content
		padding 13px 0
		position relative
		z-index 3
		background-color $header-bg
		
		.container
			position relative
			z-index 4
	.socials
		margin-right 55px
		
	&__tools
		&--col
			flex 1
.phone
	margin-right 55px
	&__text
		display inline-block
		vertical-align middle
		margin-right 25px
		font-family $SemiBold
	&__link
		display inline-block
		vertical-align middle
		font 14px $SemiBold
		color $text-color
		&:hover
			color $accent-color