// Media queris mixins add there
@import '../../node_modules/stylus-media-queries/index.styl'
/* -------Screen sizes----------- 
+screen(minWidth, maxWidth)
+max-screen(maxWidth)
+min-screen(minWidth)
+screen-height(minHeight, maxHeight)
+max-screen-height(maxHeight)
+min-screen-height(minHeight)
*/
+max-screen(1450px)
	.menu__wrapper
		padding 30px
		
	.menu__contacts
		margin-top 50px
		
+max-screen(1200px)
	// Homepage
	.help
		&__row 
			
			.sect__title--sm
				margin-right 30px
		&__items
			margin-left -15px
			margin-right -15px
		&__item
			&--wrapper
				padding 0 15px
				
	// News
	.article__item
		padding 20px 30px
		
	.articles__row
		margin-left -30px
		margin-right -30px
	
	//Single
	.projects__row
		margin-left -15px
		margin-right -15px 
	.project-card__wrapper
		padding-left 15px
		padding-right 15px
				

+max-screen(1100px)
	// Homepage
	.projects__slider--controls
		left auto
		right 0
		
	.about-us__mission
		&--card
			margin-bottom 20px
		&--wrapper
			width 50%
			padding 20px
			

	.projects__current--row
		margin-left -15px
		margin-right -15px
		&:first-child
			.card__wrapper
				&:last-child
					flex 1
				
		.card
			width 100%
			&__wrapper
				width 50%
				padding 15px
				&--btn
					text-align center
					width 100% !important
					margin-top 15px
					

	// single
	.project-card__wrapper
		width 50%
		
	// Team
	.team__member--item-photo
		width 240px
		margin-right 20px
		
	// Projects
	.projects__category
		padding 10px
		
	.projects__categories--row
		margin-left -10px
		margin-right -10px
		
				
+max-screen(1000px)
	// .header
	.phone
		text-align center
		&__text
			display block
			margin-right 0
			margin-bottom 5px
			font-size 12px			
	// Homepage
	.sect__help
		margin-top 0
		padding-top 40px
		
	.help
		&__row
			flex-wrap wrap
			
			.sect__title--sm
				width 100%
				margin-right 0
				margin-bottom 25px
				

	.form
		&__row
			flex-wrap wrap
		&__block
			order 1
			width 100%
		&__img
			width 100%
			flex none
			margin-right 0
			margin-top 40px
			order 2
			

	.partner__wrapper
		width 33.3333%
		
	.about-us
		&__row
			flex-wrap wrap
			margin-bottom 80px
		&__content
			max-width 100%
			margin-right 0
			padding-top 0
			margin-top 50px
			order 2
		&__img
			flex none
			width 100%
			order 1
			
		&__missions
			margin-top 0
			

	.team__member--wrapper
		width 33.3333%
		

	.news
		&__col
			width 100%
			&:first-child
				order 2
				margin-top 50px
			&:last-child
				padding-left 0
				
	.article
		&__wrapper--lg
			.article__thumbnail
				padding-top 50%
		&__information
			width 95%
			

	.footer
		&__col
			width 25%
			&:last-child
				margin-top 30px
				width 100%
				display flex
				align-items center
				justify-content space-between
		&__contacts
			margin-bottom 0		
	.developed
		margin-top 0
		

	// News

	.article__item
		width 100%
		
	// Single
	.article__block
		&--title
			margin-bottom 30px
		&--info
			width 100%
			padding-top 0
			margin-bottom 40px
		&--content
			padding-left 0
			
+max-screen(900px)
	// Team
	.team-header
		&__row
			flex-wrap wrap
		&__content
			width 100%
			padding-right 0
		&__img
			width 100%
			flex none
			text-align center
			margin-top 30px
			
	.team
		&-members
			display flex
			flex-wrap wrap
			justify-content flex-start
			margin-left -15px
			margin-right -15px
		&__member
			&--item
				width 50%
				padding 15px
				flex-direction column
				border none
				position relative
				&:before
					pseudo()
					position absolute
					left 15px
					right 15px
					height 1px
					background-color $article-border-color
				
				.team__member--name
					margin-bottom 15px
				&-photo
					margin-right 0
					margin-bottom 20px
				&-description
					flex-direction column
					flex none
					width 100%
				&-col
					width 100%
					padding 0
					margin-bottom 30px
					text-align center
					&:last-child
						margin-bottom 0
						
				&-label
					margin-bottom 25px
					display none
					

	.card__content--body
		font-size 11px
		
	// technical
	.technical
		&__content
			width 100%
			padding-right 0
			
		&__img
			width 100%
			flex none
			margin-top 50px
			text-align center
					
+max-screen(767px)
	// .header
	// 	display none
	.header
		&:before,
		&:after
			top -17px
		.logo
			img
				max-width 100px	
	.phone
		margin-right 25px
		
	.langs
		margin-right 25px
		
	.header
		.socials
			margin-right 25px
			&__item
				margin-right 20px
				&:last-child
					margin-right 0
					
	.menu__wrapper
		height 100vh
		height calc(100vh - 70.03px)
	// Homepage
	.title
		font-size 48px
	
	.slider__controls
		width 150px	
	.projects__slider--controls 
		.permalink
			margin-left 20px
			

	.team__member--wrapper
		width 50%
		
	.projects__current
		margin-top 40px
		
	.card
		&__wrapper
			width 50% !important
		&__lg
			.card__thumbnail
				height 185px
				
	// Team
	.team-header
		margin-bottom 45px
		
	// contacts
	.contacts
		max-width 100%
		padding-right 0
		&__block
			margin-bottom 35px
			padding-left 35px
			&--title
				&:before
					margin-right 25px
	.map__wrapper
		position relative
		width 100%
		height 350px
		margin-top 50px
		
+max-screen(700px)

	.menu
		&__img
			display none
			
		&__contacts
			margin-top 30px
			&--block
				margin-bottom 20px
	
	.nav
		&__item
			margin-bottom 15px
		&__link
			font-size 14px

	.gutters
		padding 70px 0
		
	.gutter
		&-top
			padding-top 70px
		&-bottom
			padding-bottom 70px
			
	.sect__title
		font-size 26px
		margin-bottom 30px
	// Homepage
	.title
		font-size 32px
	
	.subtitle
		font-size 20px
		margin-bottom 45px
		
	.help__items
		flex-wrap wrap
		margin-left -7.5px
		margin-right -7.5px
	.help__item--wrapper
		width 50%
		padding 7.5px
		
	.projects__slider--wrapper
		margin-bottom 70px
		

	.footer__col
		width 100%
		margin-bottom 30px
		text-align center
		&:last-child
			margin-bottom 0
			margin-top 0
			
	// News
	.articles__block
		margin-bottom 40px
		
		&:last-child
			margin-bottom 0
			
	// single
	.with-decor-top
		span
			padding-top 35px
			
	.content
		img
			margin-top 75px
			
	.article
		&__rating
			&--wrapper
				padding 15px
				
		&__block--title
			font-size 26px
				
		&__category
			margin-bottom 35px
			.btn
				width auto
				
	// single
	.project-card__wrapper
		width 100%
		
		.card__content--body
			font-size 11px		
			
	// About
	.article__block--info-about 
		p
			margin-bottom 35px
			
+max-screen(640px)

	.header
		&__content
			padding 5px 0
		&:before,
		&:after
			top -34px
		
	.menu
		width 100%
		&__wrapper
			height 100vh
			height calc(100vh - 54.03px)
			padding 30px 0 15px
		&-block-border
			display block 
			.langs,
			.socials
				display block !important
	.phone,
	.langs
		display none
		
	.header
		.socials
			display none
	
	.leaf-decor
		padding-left 30px
	// Homepage
	.sect__promo
		min-height auto
	.projects__slider--controls 
		position relative
		right auto
		bottom auto
		margin-top 40px
		justify-content center
		

	.partner__wrapper
		width 50%
		

	.card
		&__wrapper
			width 100% !important

	.news-title__row
		margin-bottom 50px	
		

	.btn__top
		left 10px
		bottom 10px
				
+max-screen(520px)

	// Homepage
	.promo__block--btns
		display flex
		flex-direction column
		.btn
			margin-right 0
			margin-bottom 25px
			&:last-child
				margin-bottom 0
	
	.inputs__row 
		margin-bottom 7.5px
		margin-left -7.5px
		margin-right -7.5px
		.input__wrapper
			width 100%
	.input__wrapper
		padding 7.5px !important		
		
	.submit__row
		flex-direction column
		margin-top 20px
		
	.form__notice
		width 100%
		margin-left 0
		margin-top 30px
		

	.about-us
		&__missions
			margin-bottom 50px
		&__mission
			&--wrapper
				width 100%
			

	.team__member--wrapper
		width 100%
	

	.article
		&__wrapper--lg
			.article__thumbnail
				padding-top 0
				height 320px
				
		&__content--col
			padding-left 0
			margin-bottom 25px
			
		&-rotate
			.article__content--col
				padding-right 0
				
		&__thumbnail
			padding-top 60%
			width 100%
			
		&__item
			.article__thumbnail
				order 2
			
				
	
	.footer__col
		&:last-child
			flex-direction column
			
	.footer__contacts
		margin-bottom 30px
	.developed
		margin-top 30px
		
	// Team
	.team__member--item
		width 100%
		
	// technical
	.technical__title
		font-size 100px
		&--sm
			font-size 50px
		
	.technical__text
		font-size 12px
		margin-bottom 25px
			

+max-screen(400px)
	.sect__title
		font-size 24px
	// Homepage
	.help
		&__item
			padding 10px 15px
			font-size 12px
	


	.title
		font-size 30px
		
	.subtitle
		font-size 18px
		margin-bottom 40px
		
	.btn
		width 100%
		
	.projects__slider 
		.swiper-slide-active 
			.card__content--body
				font-size 11px
				

	// single
	.sect__title--row
		flex-direction column
		align-items flex-start
		margin-bottom 0
		
		.permalink
			margin-top 25px